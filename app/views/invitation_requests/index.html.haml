#left-side
  .top-box
    =# render '/nav' %>

#middle-side
  .wrap
    .address
      %a{:href => "#"}
        = t 'invitation.invitations'
    #goods-list-short
      .short-wrap
        - @invitation_requests.each do |ir|
          .item{:id => "request-#{ir.id}" }
            .desc
              .fright{:id => 'buttons-#{ir.id}'}
                -if ir.status == 'new'
                  = link_to content_tag(:span, t('invitation.invite')),invite_invitation_request_path(ir), {:class => 'blue-btn', :remote => true, :method=>'GET'}
                  = link_to content_tag(:span, t('invitation.decline')),decline_invitation_request_path(ir),{ :class => 'blue-btn', :remote => true, :method=>'GET' }
                -else
                  %h3
                    = ir.status
              %p
                %b
                  = "#{h ir.name} #{h ir.company_name}"
                %span
                  = h ir.email
                %span{:class => 'product-name'}
                  = h ir.notes  
                %span{:class => 'date'}
                  = humanize_date(ir.updated_at)
              %p
                %span{:class => 'changes'}
                  = h ir.status              
                = h ir.roles.join(',')

