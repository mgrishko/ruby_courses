= title @product_version.name, page_title: false

- content_for(:sidebar) do
  = render "photos/photo", photo: @product.photos.last, disable_uploads: true

  %br
  %br

  = @product.edit_link(class: "btn large")
  %br
  %br

  = @product.destroy_link(confirm: true, class: "btn small danger")

  %br
  %br

  %h3= t('.tags')
  %ul
    = @product.visibility_label(wrapper: :li)
    = @product.tag_labels(wrapper: :li)

  = render "versions"
  %br
  %br
  = link_to t("back"), products_path

%article
  %header
    %h2= @product_version.name

  %p= @product_version.manufacturer
  %p= @product_version.brand
  %p= @product_version.description

%section#comments
  - if can? :create, Comment
    = render "comments/form", commentable: @product.model

  %table
    %tbody#comments_list
      = render partial: "comments/comment", collection: @comments
