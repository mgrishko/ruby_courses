<div class="choosed-items">
  <% if receivers %>
    <% receivers.each do |r| %>
      <span class="drop-down-link-choosed" href="#"><%= r.user.gln %>/<%= r.user.name %></span>
        <% if can? :destroy, r %>
          <%= link_to '', receiver_url(:id => r), {:method => :delete, :remote => true,:class=>'minus-btn'} %>
        <% end %>
    <% end %>
  <% end %>
</div>
<div class="drop-down-cont zi-2">
  <a class="drop-down-link companies-choise border_bottom_none" href="#">
    <span class="drop-down-link-in" id='retailer_label'><%= t 'privacy.choose' %></span>
    <%= hidden_field_tag 'new_receiver_input2' %>
  </a>
  <a class="plus-btn" onclick="return submitReceiver('2')" href="#"></a>
  <div class="drop-down">
    <div class="blue-tarr"></div>
    <div class="drop-down-list-cont">
      <div class="drop-down-list first" id="retailers_list">
        <ul>
          <% @retailers.each do |r| %>
            <li><%= link_to "#{h r.name}", ""%></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="remark">
      <%= t 'main.annotations' %><br /><br /><br />
    </div>
    <a class="submit-btn2" id="retailer_select_btn" href="javascript:void(0)"><%= I18n.t('main.apply') %></a>
  </div>
</div>
<div class='dd-overlay'></div>
<script>
  var receivers={}
  <% @retailers.each do |r|%>
    receivers['<%= h r.name %>'] = <%=r.gln%>;
  <% end %>
  $('.drop-down-link').click(function(){
          $('.drop-down').css('visibility','hidden');
        $('.dd-overlay').css('display','block');
        $(this).parent().find('.drop-down').css('visibility','visible');
        return false;
        });

        $('.drop-down-list ul li a').click(function(){
        $(this).parent().parent().find('li').removeClass('selected');
          $(this).parent().parent().parent().find('li').removeClass('selected');
            $(this).parent().addClass('selected');
            return false;
        });
        $('.dd-overlay').click(function(){
          $('.drop-down').css('visibility','hidden');
          $('.dd-overlay').css('display', 'none');
        });

      $('#retailer_select_btn').click(function(){

        $('#retailers_list ul li a').each(function(){
              if ($(this).parent().hasClass('selected')){
                var value=$(this).html()
                $('#retailer_label').html(value);
                $('#new_receiver_input2').val(receivers[value])
                $('.drop-down').css('visibility','hidden');
                $('.dd-overlay').css('display', 'none');
                return false;
              }
        });
        });
</script>

