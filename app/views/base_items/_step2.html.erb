<h2><%= t 'item.logistic' %></h2>
<div class="pi" style="width:250px">
  <h3><%= @base_item.gtin %></h3>
  <p>
    <div id="cases_input_0">
  		<div class="drop-down-cont pad-l-5 zi-5">
  	  	<%= f.text_field :packaging_type, :style=>"border: 0;", :title =>"Packaging Type",:class=>'dd-input' %>
  	  	<div class="drop-down pic">
  	  		<div class="blue-tarr"></div>
  	  		<div class="drop-down-list-cont" style ="width:400px;">
  	  			<div id="cases_results_0" style="width:100%;" class="drop-down-list first pt-cases">
  	  			</div>
	  			<div class="pic-cont" style="height:100%;">
  	  			</div>
  	  		</div>
  	  		<div class="remark">
      			<%= t 'main.annotations' %><br /><br /><br />
  	  		</div>
  	  		<a class="submit-btn2 pt-choose-btn" href="javascript:void(0)"><%= I18n.t('main.apply') %></a>
  	  	</div>
  	  </div>
  	</div>
  </p>

<div class="dd-overlay"></div>
<script type="text/javascript">
	$j('.dd-input').focus(function(e){
	  $j('.remark').html("");
  	$j.ajax({data:'packagin_item_id=0&hide_px=true', dataType:'script', type:'post', url:'/main/cases'});
		$j('.drop-down').css('visibility','hidden');
		$j('.dd-overlay').css('display','block');
		$j(this).parent().find('.drop-down').css('visibility','visible');
		return false;
	});
	$j('.choose-btn').click(function(){
		$j('.drop-down').css('visibility','hidden');
		$j('.dd-overlay').css('display', 'none');
		return false;
	})
 	$j('.dd-overlay').click(function(){
  		$j('.drop-down').css('visibility','hidden');
  		$j('.dd-overlay').css('display', 'none');
	});
	$j(".pt-choose-btn").click(function(){
    $j(this).parent().find('.pt-cases ul li a').each( function(){
      if ($j(this).parent().hasClass('selected')){
        $j('#base_item_packaging_type').val($j(this).html());
     	 	$j('.drop-down').css('visibility','hidden');
    	 	$j('.dd-overlay').css('display', 'none');
       	return false;
      }
    });
    return false;
  });
</script>
<p>
<%=f.text_field :height, :style => 'width: 25px; border: 0;' %>x<%=f.text_field :width, :style => 'width: 25px;border:0' %>x<%=f.text_field :depth, :style => 'width: 25px;border:0' %> <%= t 'pi.size' %>
</p>
