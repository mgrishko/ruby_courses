<script type="text/javascript">
$j('#base_item_packaging_type').click(function(){
		var offset = $j('#cases_input_0').offset();
		offset.left +=30;
		offset.top -=65;
		$j.ajax({data:'packagin_item_id=0&hide_px=true', dataType:'script', type:'post', url:'/main/cases'});
		$j('#cases_0').show();
		$j('#cases_0').css({
left: offset.left+"px",
top: offset.top+"px"
});
		return false;
		})
$j("#cases_close_0").click(function(){
		$j("#cases_0").hide();
		$j('#hidden_div').hide();
		return false;
		})
$j("#cases_select_0").click(function(){
		var li = $j("li.ac_liselected", ".cases_results")[0];
		$j("#cases_input_0 input").val($j(li).attr("id"));
		$j("#cases_0").hide();
		$j('#hidden_div').hide();
		return false;
		})
</script>


