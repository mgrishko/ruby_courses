<% if  @base_item.id and @base_item.item.image_url('big').any? %>
  <a id='iil' href="<%= @base_item.item.image_url('big') %>" title="">
    <img id="item_image" src="<%= @base_item.item.image_url %>" alt="Item Image"/>
  </a>
<%else%>
  <img id="item_image" src="/images/item_image.jpg" style="width:163px;height:163px" alt="Item Image"/>
<%end%>
<% unless @view_only %>
<% if @base_item.id %>
<div id="upload">
<a id="link_upload" href="#" onclick="$j('#link_upload').hide(); $j('#form_upload').show(); return false;">Сменить изображение</a>
<form id="form_upload" target="frame" action="/images/upload" enctype="multipart/form-data" method="POST" style="display:none;">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
<input type="hidden" name="item_id" value="<%= @base_item.item.id %>"/>
<input type="hidden" name="base_item_id" value="<%= @base_item.id %>"/>
<input type="file" name="image" size="10"/>
<input type="submit" value="Загрузить" class="button"/>
<input type="button" value="Отмена" onclick="$j('#link_upload').show(); $j('#form_upload').hide(); return false;" class="button"/>
</form>
<iframe id='frame' name="frame" style="display:none;"></iframe>
</div>
<% end %>
<% end %>
<% content_for :head do %>
<script type="text/javascript">
  $j(function() {
   $j("#width").css("min-width",$j(".align_center_to_left").width());
  });
</script>

<% end %>

