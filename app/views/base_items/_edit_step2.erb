<% remote_form_for(@base_item) do |f| %>
<input type="hidden" name="step" value="2"/>
<%= f.error_messages %>
<h3><%= @base_item.gtin %></h3>
<p>
	<div id="cases_input_0" class="input input_div"> 
		<%= f.text_field :packaging_type, :style=>"border: 0;", :title =>"Packaging Type" %>
	</div>
</p>
<input type="hidden" id="cases_value">
<div id="cases_0" class="cases_results cases" style="display:none;">
	<div class='corner'></div>
	<a href="#" id="cases_close_0" class="close"></a>
	<div id="cases_results_0" class="inline results_ul">
</div>
<div class="cases_man">
</div>
<div style="width:100%; position: relative; float: right;" class="inline">
  <hr>
  <a id="cases_select_0" class="ok_button" href="#"></a>
</div>
</div>

<script type="text/javascript">
$j('#base_item_packaging_type').click(function(){
	var offset = $j('#cases_input_0').offset();
	offset.left +=50;
	offset.top -=10;
	$j.ajax({data:'packagin_item_id=0&hide_px=true', dataType:'script', type:'post', url:'/main/cases'});
	$j('#cases_0').show();
	$j('#cases_0').css({
	  left: offset.left+"px",
	  top: offset.top+"px"
	});
	return false;
})
$j("#cases_close_0").click(function(){
  $j("#cases_0").hide();
  $j('#hidden_div').hide();
	return false;
})
$j("#cases_select_0").click(function(){
	var li = $j("li.ac_liselected", ".cases_results")[0];
	$j("#cases_input_0 input").val($j(li).attr("id"));
	$j("#cases_0").hide();
  $j('#hidden_div').hide();
  return false;
})
</script>
<p>
<%=f.text_field :height, :style => 'width: 25px; border: 0;' %><span class='t'>x</span><%=f.text_field :width, :style => 'width: 25px;border:0' %><span class='t'>x</span><%=f.text_field :depth, :style => 'width: 25px;border:0' %> <span class='t'>(В x Д x Ш)</span>
</p>
<p>
<%=f.text_field :gross_weight, :style=> "width: 25px;border: 0;"%> <span class='t'>г. брутто,</span> <%=f.text_field :net_weight, :style=>"width: 25px; border: 0;" %> <span class='t'>г. нетто</span>
</p>
<div class="fleft"><%= f.submit "Обновить", :style=>"width: auto;"%></div>
    <div class="fright min" style="margin-right: 25px;"><%= button_to_remote 'Отмена', :url => base_item_path(@base_item)+"?step=2", :method => :get %></div>
<% end %>
