<% remote_form_for(@base_item) do |f| %>
<input type="hidden" name="step" value="2"/>
<%= f.error_messages %>
<h3><%= @base_item.gtin %></h3>
<p>
<select name="base_item[packaging_type]" id="base_item_packaging_type">
<% for o in @base_item.packaging_types do %>
<% if o[1] == 'PX' %>
<% else %>
  <option value="<%= o[1]%>"<%= "selected='selected'" if @base_item.packaging_type == o[1] %>><%=h o[0]%></option>
<% end %>
<% end %>
</select>
</p>
<p>
<%=f.text_field :height, :style => 'width: 25px; border: 0;' %><span class='t'>x</span><%=f.text_field :width, :style => 'width: 25px;border:0' %><span class='t'>x</span><%=f.text_field :depth, :style => 'width: 25px;border:0' %> <span class='t'>(В x Д x Ш)</span>
</p>
<p>
<%=f.text_field :gross_weight, :style=> "width: 25px;border: 0;"%> <span class='t'>г. брутто,</span> <%=f.text_field :net_weight, :style=>"width: 25px; border: 0;" %> <span class='t'>г. нетто</span>
</p>
<div class="fleft"><%= f.submit "Обновить", :style=>"width: auto;"%></div>
    <div class="fright min" style="margin-right: 25px;"><%= button_to_remote 'Отмена', :url => base_item_path(@base_item)+"?step=2", :method => :get %></div>
<% end %>
