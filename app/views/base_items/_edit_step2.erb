<%= form_for @base_item, :remote => true do |f| %>
<input type="hidden" name="step" value="2"/>
<%= f.error_messages %>
<h3 style='margin-bottom:-10px'><%= @base_item.gtin %></h3>
	<div id="cases_input_0">
		<div class="drop-down-cont pad-l-5 zi-5">
	  	<%= f.text_field :packaging_type, :style=>"border: 0;", :title =>"Packaging Type",:class=>'dd-input' %>
	  	<div class="drop-down pic">
	  		<div class="blue-tarr"></div>
	  		<div class="drop-down-list-cont" style ="width:400px;">
	  			<div id="cases_results_0" style="width:100%;" class="drop-down-list first pt-cases">
	  			</div>
	  			<div class="pic-cont" style="height:100%;">

	  			</div>
	  		</div>
	  		<div class="remark">
	  			<%= t 'main.annotations' %><br /><br /><br />
	  		</div>
	  		<a class="submit-btn2 pt-choose-btn" href="javascript:void(0)"><%= I18n.t('main.apply') %></a>
	  	</div>
	  </div>
	</div>

</div>
<div class="dd-overlay"></div>
<script type="text/javascript">
	$('.dd-input').focus(function(e){
	  $('.remark').html("");
  	$.ajax({data:'packagin_item_id=0&hide_px=true', dataType:'script', type:'post', url:'/main/cases'});
		$('.drop-down').css('visibility','hidden');
		$('.dd-overlay').css('display','block');
		$(this).parent().find('.drop-down').css('visibility','visible');
		return false;
	});
	$('.choose-btn').click(function(){
		$('.drop-down').css('visibility','hidden');
		$('.dd-overlay').css('display', 'none');
		return false;
	})
 	$('.dd-overlay').click(function(){
  		$('.drop-down').css('visibility','hidden');
  		$('.dd-overlay').css('display', 'none');
	});
	$(".pt-choose-btn").click(function(){
    $(this).parent().find('.pt-cases ul li a').each( function(){
      if ($(this).parent().hasClass('selected')){
        $('#base_item_packaging_type').val($(this).parent().attr('id'));
     	 	$('.drop-down').css('visibility','hidden');
    	 	$('.dd-overlay').css('display', 'none');
       	return false;
      }
    });
  });
</script>
<p>
<%=f.text_field :height, :style => 'width: 25px; border: 0;' %><span class='t'>x</span><%=f.text_field :width, :style => 'width: 25px;border:0' %><span class='t'>x</span><%=f.text_field :depth, :style => 'width: 25px;border:0' %> <span class='t'><%= t 'pi.size' %></span>
</p>
<p>
<%=f.text_field :gross_weight, :style=> "width: 25px;border: 0;"%> <span class='t'><%= t 'pi.gross_weight' %></span> <%=f.text_field :net_weight, :style=>"width: 25px; border: 0;" %> <span class='t'><%= t 'pi.net_weight' %></span>
</p>

<div class="fleft">
  <%= f.submit t('main.update'), :class=>'submit-btn'%>
</div>
<%= button_to t('main.cancel'),'javascript:void(0)',:class=>'submit-btn', :onclick => "cancelEditButton('#{base_item_path(@base_item, :step => 2)}');return false;"  %>
<% end %>

