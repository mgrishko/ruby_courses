<%= javascript_include_tag "jquery/jquery.selectchain.js" %>
<%= javascript_include_tag 'prototype', 'effects', 'dragdrop', 'controls' %>
<%= link_to 'Back', base_items_path %>
<div class="clear"></div>
<h2>Основные данные</h2>
<div style="width: 1200px"/>
<% form_for(@base_item) do |f| %>
  <%= f.error_messages %>
  <div style="min-width: 240px; float: left;">
  <img src="/images/item_image.jpg" alt="Item Image"/>
  </div>
  <div style="min-width: 700px; float: left">
  <%= render :partial => "#{@base_item.current_step}", :locals => {:f => f } %>
  <p>
    <%#=check_box_tag :publish%>
    <%#=label_tag :publish, "Publish record ?"%>
  </p>

  <p>
    <%= f.submit "Дальше", :class => "button" %>
  </p>
  <p><%= f.submit "Back", :name => "back_button", :class => "button" unless @base_item.first_step? %></p>
  </div>
<% end %>
</div>
<div class="clear"></div>
