.preview-popup
  .preview-larr
  %a.preview-close{:href => "#"}
  #img-container
    = image_tag base_item.image_url('tile'), :height => '113', :alt => '', :id => 'img', :class => 'preview-pic'
  .top-description
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
      %tr
        %th= t 'item.description'
        %th= t 'item.internal_item_id'
      %tr
        %td= base_item.item_description
        %td= base_item.item_id
      %tr
        %td.product-num{:colspan => "2"}= base_item.gtin
  - if current_user.supplier?
    .subscribers
      %span
        = t 'main.subscribers'
        (#{base_item.item.subscribers.count rescue 0}):
      = base_item.item.subscribers.map{|s| s.name}.join(', ') rescue ''
