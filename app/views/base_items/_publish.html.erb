  <%= form_for Receiver.new, :remote => true do |f| %>
  <input type="hidden" id="receiver_base_item_id" name="receiver[base_item_id]" value="<%= @base_item.id %>"/>
  <input type="hidden" id="receiver_gln" name="gln" />
  <% end %>
<%# end %>
<% end %>

