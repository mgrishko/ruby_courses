<% content_for :head do %>
    <%= javascript_include_tag 'jquery.lightbox-0.5' %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/jquery.lightbox-0.5.css" media="screen"/>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $("#iil").lightBox();
        });
    </script>
<% end %>



<div id="left-side">
  <%= render :partial => "image" %>
  <div class="btn-profil bb">
    <%= render :partial => "clouds" %>
    <%= render :partial => "add_tag" %>
  </div>
  <%= render :partial => 'subscribers' %>
  <%= render :partial => "versions" %>
</div>
<div id="middle-side" class='no-right-border'>
  <div class="wrap no-right-border">
    <div class="dd-overlay"></div>
    <div class="w760">
      <div class="address">
        <% if @subscription_result && @subscription_result.new? %>
          <%= link_to("#{@subscription_result.subscription.supplier.name}(#{@subscription_result.subscription.supplier.gln})" , url_for(:controller=>'profile', :id => @subscription_result.subscription.supplier ))%>
        <%else%>
          <%= link_to("#{@base_item.item.user.name}(#{@base_item.item.user.gln})" , url_for(:controller=>'profile', :id => @base_item.user )) if params[:view]%>
        <%end%>
        <%= link_to t('main.base_items'), "/base_items"%>
        <%= link_to t('main.item'), "#", :class => "last"%>
      </div>
      <div class="blue-btns bb">
        <% if @subscription_result && @subscription_result.new? %>
          <%= render :partial => 'subscription_results/actions', :locals => {:result => @subscription_result} %>
        <% else %>
          <% if params[:view] %>
            <div id="by_item_id" style="float:left"><%= render :partial => 'subscription/by_item_id' %></div>
          <% end %>
        <% end %>

        <% unless @base_item.draft? %>
          <% if @view_only%>
                <%= link_to content_tag(:span, I18n.t('main.export'), :class => "show_export_form"), "#", :class => "blue-btn show_export_form",:style=>"margin-top:7px;", :id => 'export_link' %>
          <% else %>
              <%= form_for @base_item, :url => url_for(:controller => "base_items", :action => 'draft', :id => @base_item.id) do |f| %>
                  <%= link_to content_tag(:span, I18n.t('main.edit'), :onclick=>"$('#edit_base_item_#{@base_item.id}').submit()"),'javascript:void(0)', :class => "blue-btn",:id=>'edit_base_item_btn', :onclick=>"$('#edit_base_item_#{@base_item.id}').submit()" %>
              <% end %>
              <%= link_to content_tag(:span, I18n.t('main.export'), :class => "show_export_form"), "#", :class => "blue-btn show_export_form", :id => 'export_link' %>
          <% end %>
        <%end%>

      </div>
      <%= render :partial => 'item' %>
      <div class="logistics main">
        <%= render 'packaging_items/index' %>
        <%= render :partial => 'privacy' %>
        <%= render 'comments/comments' %>
        <%= render :partial => 'publish' %>
      </div>

      <% unless @view_only %>
            <% content_for :leftmenu do %>
                <%= link_to t('item.back'), base_items_path %>
            <% end %>
      <% end %>

    </div>
  </div>
</div>
<div class="clr"></div>
</div>

