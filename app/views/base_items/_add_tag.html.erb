<%= link_to I18n.t('tag.add'), '#', :id => 'add_tag_link' %>
<%= form_for Tag.new,:html=>{:class=>'hide'}, :remote => true do |f| %>
  <input type="hidden" name="tag[item_id]" value="<%= @base_item.item_id %>"/>
  <%= link_to "x", '#', :class => 'remove-form' %>
  <%= f.autocomplete_field :name, autocomplete_tag_name_tags_path, :size=>'13' %>
<% end %>


<script type="text/javascript">
  $(document).ready(function() {
    $('a#add_tag_link').click(function(event){
      $(this).hide();
      $('#new_tag').show();
      return false;
      });

    $('a.remove-form').click(function(event){
      $('#new_tag').hide();
      $('#add_tag_link').show();
      event.preventDefault();
    });
  })
</script>

