!!!
%html
  %head
    = render :partial => 'layouts/partials/head'
  %body.application
    #flash= render :partial => 'layouts/partials/flash', :object => flash

    %header.topbar
      .topbar-inner
        .header-container
          %h3
            = link_to Settings.project_name, home_url

          - if user_signed_in?
            = render_navigation context: :main, level: 1
            = render "layouts/partials/user_menu"
            = render "layouts/partials/account_menu"

            -#%form.search-wrapper{:action => ""}
              %input.search{:placeholder => "Search", :type => "text"}

    %section.main{ class: "#{controller_name} #{action_name}" }

      %aside.sidebar
        - if content_for?(:sidebar)
          = yield(:sidebar)

      %section.content

        - if content_for?(:page_title)
          %header
            %h1= yield(:page_title)

        = yield

      - if content_for?(:sidemenu)
        .sidemenu
          = yield(:sidemenu)

    -#%footer
      -#= debug(params) if Rails.env.development?
