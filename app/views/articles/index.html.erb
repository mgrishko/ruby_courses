<h1>Listing articles</h1>

<table>
  <tr>
    <th>Record code</th>
    <th>Name</th>
    <th>Status</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=h article.gtin %></td>
    <td><%=h article.name %></td>
    <td><%=article.print_status %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Создать на основе этой', :controller => :articles, :action => :new, :base => article.id %></td>
    <td><%= link_to_item_with_count 'Packaging items для этой статьи', article_packaging_items_path(article), article.packaging_items.count%>
    <td><%= button_to 'Publish', :controller => 'articles', :action => 'send_for_change_shatus', :id => article.id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New article', new_article_path %>
