<h1>Listing articles</h1>

<table>
  <tr>
    <th>Record code</th>
    <th>Name</th>
    <th>Status</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=h article.record_code %></td>
    <td><%=h article.name %></td>
    <td><%= show_status(article.status) %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= button_to 'Publish', :controller => 'articles', :action => 'send_for_change_shatus', :id => article.id %></td>
  </tr>
<% end %>
</table>

