%h2= t('.title')

= simple_form_for(setup_account(resource), :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .inputs
    = f.input :first_name, autofocus: true
    = f.input :last_name
    = f.input :email
    = f.input :password, required: true
    = f.input :time_zone
    = f.simple_fields_for :account do |n|
      = n.input :company_name
      = n.input :country
      = n.input :subdomain
  .actions
    = f.button :submit, t('.create_account')

= render :partial => "devise/shared/links"
