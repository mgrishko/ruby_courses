= title t('.title')

= simple_form_for(setup_account(resource), as: resource_name,
        url: registration_path(resource_name), validate: true, wrapper: :inline) do |f|
  = f.error_notification
  .inputs
    = f.input :first_name, autofocus: true
    = f.input :last_name
    = f.input :email
    = f.input :password, required: true, input_html: { validate: { presence: true } }
    = f.input :time_zone
    = f.simple_fields_for :accounts, wrapper: :inline do |n|
      = n.input :company_name
      = n.input :country, include_blank: false
      = n.input :subdomain
  .actions
    = f.button :submit, t('.create_account'), class: 'success large'

