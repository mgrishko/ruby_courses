- title t('.title')

= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                  wrapper: :inline,  html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .inputs
    = f.input :password, label: t('.password'), required: true, hint: false
    = f.input :password_confirmation, label: t('.confirm'), required: true
  .actions
    = f.button :submit, t('.change')
