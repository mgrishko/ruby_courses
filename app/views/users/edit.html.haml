#left-side
  .cat

#middle-side
  .wrap
    .address
      %a
        = @user.gln    
    #profile-info
      .info-wrap
        %h3{:class=>'title'} 
          Main Information
        = form_for @user do |f|
          = f.error_messages
          %table{:cellspacing => 0, :cellpadding => 0}
            %tr
              %td
                %span
                  = t('user.namĞµ')
              %td
                = f.text_field :name
            %tr
              %td
                %span
                  = t('user.email')
              %td
                = f.text_field :email
            %tr
              %td
                %span
                  = t('user.company_name')
              %td
                = f.text_field :company_name
            %tr
              %td
                %span
                  = t('user.locale')
              %td
                = f.select :locale, I18n.available_locales,:include_blank =>true
            %tr
              %td
                %span
                  = t('user.contacts')
              %td
                = f.text_area :contacts, :rows=>5
            %tr
              %td
                %span
                  = t('user.website')
              %td
                = f.text_field :website
          %h3{:class=>'title'} 
            = t('change_password')
          %table{:cellspacing => 0, :cellpadding => 0}
            %tr
              %td
                %span
                  = t('user.password')
              %td
                = f.password_field :password
            %tr
              %td
                %span
                  = t('user.password_confirmation')
              %td
                = f.password_field :password_confirmation
          %br
          %br
          = f.submit t('user.apply') , :class => 'submit-btn'
          = link_to t('user.back'), @user 
