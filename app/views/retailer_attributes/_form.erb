<hr/>
<%= form_for @retailer_attribute, :remote => true do |f| %>
<input type="hidden" name="retailer_attribute[item_id]" value="<%= @retailer_attribute.item.id %>"/>
<input type="hidden" name="retailer_attribute[base_item_id]" value="<%= @retailer_attribute.base_item_id %>"/>
<table>
<tr class="info">
<td>
  <%= t('ra.article_id') %>
</td>
<td>
  <%= t('ra.classification') %>
</td>
</tr>
<tr class="val">
<td>
<%= f.text_field :retailer_article_id %>
</td>
<td>
<%= f.text_field :retailer_classification %>
</td>
</tr>
<tr class="info">
<td colspan="3">
  <%= t('ra.item_description') %>
</td>
</tr>
<tr class="val">
<td colspan="3">
  <%= f.text_field :retailer_item_description, :class => 'w100p'%>
</td>
</tr>
<tr class="info">
<td colspan="3">
  <%= t('ra.comment') %>
</td>
</tr>
<tr class="val">
<td colspan="3">
<%= f.text_area :retailer_comment, :rows => 2, :class => 'w100p'%>
</td>
</tr>
</table>
<%= f.submit t('main.save'), :class=>"submit-add" %>
<%= button_to t('main.cancel'), {:url => url_for(:controller => "retailer_attributes", :action => "show", :id => @retailer_attribute.id, "retailer_attribute[item_id]" => item.id, "retailer_attribute[base_item_id]" => @retailer_attribute.base_item_id )}, {:method => :get, :class => "submit-add", :remote => true} %>
<% end %>

