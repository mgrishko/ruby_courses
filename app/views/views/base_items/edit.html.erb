<%= javascript_include_tag "jquery/jquery.selectchain.js" %>
<%= javascript_include_tag 'prototype', 'effects', 'dragdrop', 'controls' %>

<h1><%= t 'edit.base_item' %></h1>

<%= link_to t('edit.revert_to_published'), published_base_item_path(@base_item) %>

<%= form_for(@base_item) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>

  <p>
    <%= f.submit t('main.update') %>
  </p>
<% end %>

<%= link_to t('main.show'), @base_item %> |
<%= link_to t('main.back'), base_item_path %>

