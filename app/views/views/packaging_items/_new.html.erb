<div class="item">
<div class="single-arrow"></div>

<%= form_for @packaging_item, :url => base_item_packaging_items_path(@base_item), :remote => true do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= f.hidden_field :parent_id %>
  <p>
  <div class="fleft min">
    <%= f.submit t('pi.pack') %>
  </div>
  <div class="fright min">
  <%= button_to t('main.cancel'), 'javascript:void(0)', {:onclick => "cancelPackageMeWithSub(#{@base_item.id});return false;"} %>
  </div>
  </p>
<% end %>
</div>

