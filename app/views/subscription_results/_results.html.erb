<% if @subscription.subscription_results.detect {|r| r.new?} %>
  <%= link_to 'Акцептовать все', url_for(:controller => "subscription_results", :action => "update_all")+"?accept=yes&subscription_id=#{@subscription.id}",{:method => "POST", :confirm => "Вы точно хотите акцептовать все результаты?",:remote => true } %>
  <%= link_to 'Отменить все', url_for(:controller => "subscription_results", :action => "update_all")+"?cancel=yes&subscription_id=#{@subscription.id}", {:method => "POST", :confirm => "Вы точно хотите отменить все результаты?", :remote => true } %>

<% end %>
<%= render :partial => 'result', :collection => @subscription.subscription_results.reverse %>

