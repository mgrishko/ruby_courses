<ul>
	<% @subgroups.each do |k,v| %>
  	<div class="drop-down-list-in">
			<h3><%= k -%></h3>
			<ul>
	      <%= render :partial => "subgroup", :collection => v.map(&:description).uniq %>
			</ul>
	  </div>
	<% end %>
</ul>
<script type="text/javascript">
	$('.drop-down-list ul li a').click(function(){
		$(this).parent().parent().find('li').removeClass('selected');
		$(this).parent().parent().parent().find('li').removeClass('selected');
//    $(this).addClass("ac_loading");
		$(this).parent().addClass('selected');
    $("#categories").html("");
    requestCategoriesData($(this).parent().attr("id"));
		return false;
	});
</script>

