<ul style="width:100%">
  <%= render :partial => "result", :collection => @results %>
</ul>

<script type="text/javascript">
  $j(document).ready(function(){
    $j('.pt-cases').each(function(){
      var val = $j(this).parent().parent().parent().find('.dd-input').val();
      $j(this).find('ul li').each(function(){
        if ($j(this).attr('id') == val){
          $j(this).addClass('selected');
    	  	requestManData(val);
    	  	$j('.pt-cases').scrollTo("li.selected",900)
   	    }    	  
      });      
    });        
	});    

	  $j('.drop-down-list ul li a').click(function(){
	  	$j(this).parent().parent().find('li').removeClass('selected');
	  	$j(this).parent().parent().parent().find('li').removeClass('selected');
	  	$j(this).parent().addClass('selected');
	  	requestManData($j(this).parent().attr("id"));
	  	return false;
	  });
	

</script>

