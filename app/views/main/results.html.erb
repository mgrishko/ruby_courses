<ul style="width:100%">
  <%= render :partial => "result", :collection => @results %>
</ul>

<script type="text/javascript">
  $(document).ready(function(){
    $('.pt-cases').each(function(){
      var val = $(this).parent().parent().parent().find('.dd-input').val();
      $(this).find('ul li').each(function(){
        if ($(this).attr('id') == val){
          $(this).addClass('selected');
    	  	requestManData(val);
    	  	$('.pt-cases').scrollTo("li.selected",600)
   	    }    	  
      });      
    });        
	});    

	  $('.drop-down-list ul li a').click(function(){
	  	$(this).parent().parent().find('li').removeClass('selected');
	  	$(this).parent().parent().parent().find('li').removeClass('selected');
	  	$(this).parent().addClass('selected');
	  	requestManData($(this).parent().attr("id"));
	  	return false;
	  });
	

</script>

