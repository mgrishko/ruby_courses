<h2>Логистика</h2>
<table>
<tr>
<td valign="top" style="vertical-align: top;">
<div style="border: 1px solid #666;width:200px;" class="pi">
<h3 <%= highlight(:gtin, @base_item, @accepted_base_item) if @accepted_base_item -%>><%= h @base_item.gtin %></h3>
<p <%= highlight(:packaging_type, @base_item, @accepted_base_item) if @accepted_base_item -%>><%= h @base_item.packaging_type %></p>
<p>1 уп. внутри, 1 ед.</p>
<p <%= "class='highlight' title='#{h @accepted_base_item.height} x #{h @accepted_base_item.width} x #{h @accepted_base_item.depth} (В x Д x Ш)'" if  @accepted_base_item && ((@base_item.height != @accepted_base_item.height) || (@base_item.width != @accepted_base_item.width) || (@base_item.depth != @accepted_base_item.depth)) -%>> <%= h @base_item.height %> x <%=h @base_item.width %> x <%=h @base_item.depth %> (В x Д x Ш)</p>
<p <%= "class='highlight' title='#{@accepted_base_item.gross_weight} г. брутто, #{@accepted_base_item.net_weight} г. нетто'" if @accepted_base_item && ((@accepted_base_item.gross_weight != @base_item.gross_weight) || (@accepted_base_item.net_weight != @base_item.net_weight)) -%>><%= @base_item.gross_weight %> г. брутто, <%= @base_item.net_weight %> г. нетто</p>
</div>
</td>
<td>
<% recursive_tree_output @packaging_items, :class => 'items', :id => 'items' do |item| %>
  <div class="item" id="<%= dom_id item %>_item">
    <%= render :partial => 'packaging_items/item', :object => item %>
  </div>
<% end %>
</td>
</tr>
</table>
<% javascript_tag do %>
  $$('#items li').each(function(element) {
    if (!element.select('ul')[0]) {
      var ul = new Element('ul');
      element.appendChild(ul);
    }
  });
  <% unless @view_only || @base_item.published? %>
  $$('#items ul').each(function(element) {
    var id = element.up('li').id.gsub(/packaging_item_/, '');
    var li = new Element('li', { className: 'new', id: 'packaging_item_new_' + id  });
    li.update('<div class="item" style="display:none"></div>')
    //li.update('<div class="item"><a onclick="new Ajax.Request(\'/base_items/<%= @base_item.id %>/packaging_items/' + id + '/new_sub\', {asynchronous:true, evalScripts:true, method:\'get\'}); return false;" href="#">упаковать</a></div>');
    element.appendChild(li);
  });
  var li = new Element('li', { className: 'new', id: 'packaging_item_new' });
  li.update('<div class="item"><a onclick="new Ajax.Request(\'/base_items/<%= @base_item.id %>/packaging_items/new\', {asynchronous:true, evalScripts:true, method:\'get\'}); return false;" href="#">упаковать</a></div>');
  $('items').appendChild(li);
  <% end %>
  setHeights();
<% end %>
<div class="clear"></div>
