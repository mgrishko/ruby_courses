#packaging_items
  %h2= t 'main.logistic'
  .tree-cont
    .branch
      .pi-cont.edited{:class=> @packaging_items.any? ? 'hasChild' : ''}
        .bt
        - unless @base_item.draft?
          .pi.mini.edited
            = pi_image_tag @base_item, :class=> 'i-img', :width=> '64', :height => '64'
            %span.logistics-item-title
              %strong= '1'
              = h @base_item.calculate_packaging_type
            %br/
            %span.logistics-item-title-2
              %strong 1
              = t 'pi.packages_inside'
              %strong 1
              = t 'pi.items'
            %table.input-table-edited{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "116"}
              %tr
                %td.art{:colspan => "2"}= h @base_item.gtin
        .pi.edited{:class=> @base_item.draft? ? '' : 'full'}
          = pi_image_tag @base_item, :class=> 'i-img', :width=> '64', :height => '64'
          %span.logistics-item-title
            %strong= '1'
            = h @base_item.calculate_packaging_type
          %br/
          %span.logistics-item-title-2
            %strong 1
            = t 'pi.packages_inside'
            %strong 1
            = t 'pi.items'
          %table.input-table-edited{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "116"}
            %tr
              %td.art{:colspan => "2"}= h @base_item.gtin
            %tr
              %td
                = t('pi.height')
                \:
              %td
                = h @base_item.height
                = t('uom.mm')
            %tr
              %td
                = t('pi.width')
                \:
              %td
                = h @base_item.width
                = t('uom.mm')
            %tr
              %td
                = t('pi.depth')
                \:
              %td
                = h @base_item.depth
                = t('uom.mm')
            %tr
              %td
              %td
            %tr
              %td
                = t('pi.gross_weight')
                \:
              %td
                = h @base_item.gross_weight
                = t('uom.grm')
            %tr
              %td
                = t('pi.net_weight')
                \:
              %td
                = h @base_item.net_weight
                = t('uom.grm')
          =image_tag 'newdesign/icon-delivery-unit-2.jpg',:height=>23, :alt=>"",:class=> 'u-img'
        = link_to(content_tag(:span, t('pi.pack')), '#', :class=> 'blue-btn pack-btn', :onclick => "addLeaf(this);return false;")
      = pi_tree @packaging_items.roots  do |item, options|
        = render :partial => 'packaging_items/item', :locals=>{:item => item, :options => options}
  .clear

