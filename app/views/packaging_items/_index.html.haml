- javascript 'logistic'
#packaging_items
  %h2= t 'main.logistic'
  %br
  .tree-cont
    .branch
      .pi-cont{:class=>"#{'hasChild' if @packaging_items.any? } #{@base_item.draft? ? 'edited' : 'minimized'}", :id => 'first_pi' }
        .bt
        - unless @base_item.draft?
          .pi.mini.edited
            = pi_image_tag @base_item, :class=> 'i-img', :width=> '64', :height => '64'
            %span.logistics-item-title
              %strong= '1'
              = h @base_item.calculate_packaging_type.downcase
            %br/
            %span.logistics-item-title-2
              %strong= '1'
              = h @base_item.calculate_packaging_type.downcase
            %table.input-table-edited{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "116"}
              %tr
                %td.art{:colspan => "2"}= h @base_item.gtin
        .pi.edited{:class=> @base_item.draft? ? '' : 'full'}
          - unless @base_item.published? || @view_only
            .edit-delete2
              = link_to '', edit_base_item_path(@base_item, :step => 2), {:method => :get, :remote => true}
          = pi_image_tag @base_item, :class=> 'i-img', :width=> '64', :height => '64'
          %span.logistics-item-title
            %strong= '1'
            = h @base_item.calculate_packaging_type.downcase
          %br/
          %span.logistics-item-title-2
            %strong= '1'
            = h @base_item.calculate_packaging_type.downcase
          %table.input-table-edited{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "116"}
            %tr
              %td.art{:colspan => "2"}= h @base_item.gtin
            %tr
              %td
                = t('pi.height')+":"
              %td{:class => 'tright'}
                = convert_mm_to_m  @base_item, :height
            %tr
              %td
                = t('pi.width')+":"
              %td{:class => 'tright'}
                = convert_mm_to_m  @base_item, :width
            %tr
              %td
                = t('pi.depth')+":"
              %td{:class => 'tright'}
                = convert_mm_to_m  @base_item, :depth
            %tr
              %td
              %td
            %tr
              %td
                = t('pi.gross_weight')+":"
              %td{:class => 'tright'}
                = convert_grm_to_kg  @base_item, :gross_weight
            %tr
              %td
                = t('pi.net_weight')+":"
              %td{:class => 'tright'}
                = convert_grm_to_kg  @base_item, :net_weight
          =image_tag 'newdesign/icon-delivery-unit-2.jpg',:height=>23, :alt=>"",:class=> 'u-img'
        = link_to content_tag(:span, t('pi.pack')) ,"javascript:void(0)", :class=> 'blue-btn pack-btn',:align=>'center',
            :onclick => "packageMe(this,#{@base_item.id});return false"
      - if @packaging_items.any?
        = pi_tree @packaging_items.roots  do |item, options|
          .pi-cont{:class=>"#{options[:class]} #{@base_item.draft? ? 'edited' : 'minimized'}",:style => options[:style], :id => "pi-#{item.id}"}
            = render :partial => 'packaging_items/item', :locals=>{:item => item, :options => options}
  .clear

