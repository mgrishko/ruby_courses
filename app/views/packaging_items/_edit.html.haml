= form_for @packaging_item, :url => base_item_packaging_item_path(@base_item, @packaging_item), :html=>{:class=> 'jNice'},:remote => true do |f|
  .bt
  = render :partial => 'form', :locals => { :f => f }
  .center
  = f.submit t('main.update'),:class=>'submit-btn accept-btn'
  = link_to content_tag(:span, t('main.cancel')), 'javascript:void(0)', :class=>'blue-btn cancel-btn', :onclick  => "cancelEditButton('#{base_item_packaging_item_path(@base_item, @packaging_item)}');return false;"

