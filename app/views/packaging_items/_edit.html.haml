= form_for @packaging_item, :url => base_item_packaging_item_path(@base_item, @packaging_item), :remote => true do |f|
  .bt
  = render :partial => 'form', :locals => { :f => f }
  %div{:align => "center"}
    = link_to content_tag(:span, t('main.cancel')), 'javascript:void(0)', :class=>'cancel-btn fright', :onclick  => "cancelEditButton('#{base_item_packaging_item_path(@base_item, @packaging_item)}');return false;"
    = f.submit t('main.update'),:class=>'submit-btn accept-btn'

