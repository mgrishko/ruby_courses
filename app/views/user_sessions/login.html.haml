= form_for @user_session, :url => { :controller => :user_sessions, :action => :login } do |f|
  .invite
    - if @user_session.errors.present?
      #errorExplanation.errorExplanation
        %h2
          = t 'login.unsuccessful'
        %ul
          - @user_session.errors.full_messages.map do |msg|
            %li=msg
    %p
      = f.label t('user.gln')
      %br/
      = f.text_field :gln
    %p
      = f.label t('user.password')
      %br/
      = f.password_field :password
    %p
      = f.label t('user.remember_me')
      = f.check_box :remember_me
    = f.submit t('user.login'), :class=>'submit-btn'
    = link_to t('invitation.request_invitation'), new_invitation_request_path

%br
  = t('password_resets.forget')
  = link_to t('password_resets.reset_password'), new_password_reset_path
