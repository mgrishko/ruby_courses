= title t(".title")

- content_for(:sidebar) do
  = MembershipDecorator.invitation_link(class: "btn large primary")

%article
  %table.grid
    %tr
    %th= t('helpers.label.membership.name')
    %th= t('helpers.label.membership.role')
    %th= t('helpers.label.membership.email')
    %th &nbsp;
    %th &nbsp;
    - @memberships.each do |m|
      %tr
        %td= m.display_name
        %td= m.role_name
        %td= m.email
        %td= m.edit_link
        %td= m.destroy_link
